<h2 class="bg-gray-200 text-brand-orange-50 border border-brand-orange">{{ collections['frontpage'].title }}</h2>

{% for product in collections['frontpage'].products %}
    <div>
        <h3>{{ product.title }}</h3>
        <p>{{ product.description }}</p>
        <p>{{ product.price | money }}</p>
    </div>
    {{- product.title | link_to: product.url }}

    <div class="bg-gray-200 p-4 lg:p-8 rounded-lg flex justify-center">
        <h1 class="text-blue-600 font-bold text-2xl">Hello, Tailwind!</h1>
      </div>
{% endfor %}

{% schema %}
{
    "name": "Frontpage",
    "settings": [],
    "presets": [
        {
            "name": "Frontpage"
        }
    ]
}
{% endschema %}